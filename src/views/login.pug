extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="userId", type="text", placeholder="아이디", required)
        input(name="password", type="password", placeholder="비밀번호", required)
        input(type="submit", value="로그인")
        include partials/social-login
    div.auth-switch
        span 계정이 없나요? 
        a(href="/join") 회원가입하기 &rarr;