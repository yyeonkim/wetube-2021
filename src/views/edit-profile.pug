extends base.pug


block content
    if errorMessage 
        span=errorMessage
    img(src="/"+loggedInUser.avatarUrl, width="100", height="100")
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") 프로필 사진
        input(name="avatar", id="avatar",type="file", accept="image/*")
        input(name="name", type="text", placeholder="이름",value=loggedInUser.name, required)
        input(name="email", type="email", placeholder="이메일",value=loggedInUser.email, required)
        input(name="location", type="text", placeholder="위치",value=loggedInUser.location, required)
        input(type="submit", value="저장하기")
        if (!loggedInUser.socialOnly) 
            hr
            a(href="change-password") 비밀번호 변경 &rarr;    
        
        