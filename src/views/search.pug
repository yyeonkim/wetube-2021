extends base.pug
include mixins/video

block content 
    form(method="GET").search__form
        input(name="keyword", placeholder="제목으로 검색하기", type="text")
        button
            i.fas.fa-search

    div.video-grid
        each video in videos
            +video(video)
        else 
            span.empty__message 찾으시는 동영상이 없습니다.